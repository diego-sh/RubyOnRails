<%= form_for(@article) do |f| %>
        <% @article.errors.full_messages.each do |message| %>
            <div class="be-red white top-space">
                <%= message%>
            </div>
        <%end%>
        <div class="field">
            <%= f.text_field :titulo, placeholder: "Título", class:"form-control" %>
        </div>
        <div class="field">
            <%= f.text_area :cuerpo, placeholder: "Escribe aqui el artículo",style:"height:250px;" ,class:"form-control" %>
        </div>
        <div class="field">
            <%= f.submit "Guardar", class:"btn be-red white" %>
        </div>

    <%end%>