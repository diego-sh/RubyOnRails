
<%= form_for @consulta, :url => { :action => "createAntecedente" } do |f| %>
    <div class="row">
        <%= f.fields_for :antecedente do |o|%>
        <div class="col-lg-4">
            <div class="form-group">                
                <label for="tipoAntecedente">TIPO</label>
                <%= o.text_field :Ant_tipo, class:'form-control', id:'tipoAntecedente',placeholder:'Tipo'%>
            </div>            
        </div>

        <div class="col-lg-4">
            <div class="form-group">                
                <label for="DesAntecedente">DESCRIPCIÓN</label>
                <%= o.text_area :Ant_Descripcion, class:'form-control', id:'DesAntecedente',placeholder:'Añada alguna particularidad'%>
            </div>            
        </div>      
        <% end %>    
    </div>

    <div class="row" style="margin-top:20px">
            <div class="col-md-3">
            </div>
          <div class="col-md-3">
            <div class="actions">
              <%= f.submit "Guardar", class:"btn btn-primary  btn-block" %>
            </div>
          </div>
          <div class="col-md-3">
            <%= link_to 'Cancelar', consultas_path, class:"btn btn-primary center-block" %>
          </div>
          <div class="col-md-4"></div>  

        </div>
    <% end %>