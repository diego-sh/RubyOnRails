<% @consultas.each do |consulta| %>
<div class="panel-group" style="margin-top: 15px">
  <div class="panel">
    <div class="panel-heading" style="background-color: #b0bec5">
      <h4 class="panel-title" style="color: #fff">
        <span class="glyphicon glyphicon-folder-open" aria-hidden="true"></span>
          <a data-toggle="collapse" href="#collapse_<%= consulta.consulta_id %>">&nbsp CONSULTA - <%= consulta.Cit_Fecha %></a><br>
      </h5>
    </div>
  </div>
</div>
<div id="collapse_<%= consulta.consulta_id%>" class="panel-collapse collapse">
  <div class="panel-body" style="background-color:  #fff8e1">
    <div class="row">
      <div class="col-lg-4">
        <div class="form-group">
          <label for="nombrePN" id="hc">ENFERMEDAD ACTUAL</label><br>
          <label for="nombrePN"><%= consulta.Con_Cronologia %></label>
        </div>
      </div>

      <div class="col-lg-4">
        <div class="form-group">
          <label for="nombrePN" id="hc">DIAGNOSTICO</label><br>
          <label for="nombrePN"><%= consulta.Con_Diagnostico_Final %></label>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-8">
        <div class="form-group">
          <label for="nombrePN" id="hc">MOTIVO</label><br>
          <label for="nombrePN"><%= consulta.Con_Motivo %></label>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-4">
        <div class="form-group">
          <label for="nombrePN" id="hc">PROCEDIMIENTO</label><br>
          <label for="nombrePN"><%= consulta.Pre_Procedimiento %></label>
        </div>
      </div>

      <div class="col-lg-4">
        <div class="form-group">
          <label for="nombrePN" id="hc">INDICACIONES GENERALES</label><br>
          <label for="nombrePN"><%= consulta.Pre_Indicaciones_Generales %></label>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-8">
        <div class="form-group">
          <label for="nombrePN" id="hc">OBSERVACIÃ“N</label><br>
          <label for="nombrePN"><%= consulta.Pre_Observacion %></label>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-2">
        <div class="form-group">
          <button onclick="recetaHC(<%= consulta.consulta_id %>)" class="btn btn-primary">
            <span><i class="glyphicon glyphicon-file"></i> MEDICAMENTOS </span>
          </button>
        </div>
      </div>

      <div class="col-lg-2">
        <div class="form-group">
          <button onclick="terapiaHC(<%= consulta.consulta_id %>)" class="btn btn-primary">
            <span><i class="glyphicon glyphicon-edit"></i> TERAPIA </span>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>
