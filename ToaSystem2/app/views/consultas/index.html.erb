<% provide(:consultas, 'active') %>
<div class="panel panel-info">
    <div class="panel-heading">CONSULTAS</div>
    <div class="panel-body">
        <div class='row' style="margin-left:20px; margin-top:10px">
            <table class="table table-striped table-hover" style="width:70%; margin:0 auto">
                <thead>
                    <tr>
                        <th>HORA</th>
                        <th class="text-center">PACIENTE</th>
                        <th>OBSERVACIÃ“N</th>
                        <th colspan="2"></th>
                    </tr>
                </thead>

                <tbody style="font-size:13px">
                    <% @lstPacientesAtender.each do |pcte| %>
                        <tr>
                            <td>
                                <%= pcte.cit_hora.strftime('%H : %M') %>
                            </td>
                            <td>
                                <%= pcte.Apellidos+" "+pcte.pac_nombres %>
                            </td>
                           
                            <td>
                                <%= pcte.cit_motivo %>
                            </td>
                            <td>
                                <div class="col-md-3 col-md-offset-3"></div>
                                    <div class="col-md-3 col-md-offset-3">
                                        <form action="/../consultas/new?cit=<%= pcte.cita_id %>&pcte=<%= pcte.paciente_id %>"" method="get">
                                            <button type="submit" class="btn btn-primary pull-right">
                                                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Boton
                                            </button>
                                        </form>
                                    </div>
                                </div>
                                <a href="/../consultas/new?cit=<%= pcte.cita_id %>&pcte=<%= pcte.paciente_id %>">Atender</a>
                                <!--<%= link_to 'Atender', new_consulta_path(:pcte => pcte.paciente_id, :cit => pcte.cita_id) %>!-->
                                <a class="button" href="/../consultas/new?cit=<%= pcte.cita_id %>&pcte=<%= pcte.paciente_id %>">Button</a>
                            </td>
                            <td>
                                <%= link_to 'Editar', consultas_path %>
                            </td>
                        </tr>
                        <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>