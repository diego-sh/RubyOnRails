    <div class="row" style="margin-top:10px;">
      <div class="col-md-6">
        <h5>LISTADO DE ANTECEDENTES RELEVANTES</h5>
        <% @antecedentes.each do |antecedente| %>
          <!--<div>
            <p>
              <%= antecedente.Ant_tipo%>-
                <%= antecedente.Ant_Descripcion%>
            </p>
          </div>-->
