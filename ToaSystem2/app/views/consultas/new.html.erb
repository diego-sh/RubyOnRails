            <dt> <%= antecedente.Ant_tipo%></dt>
            <dd><%= antecedente.Ant_Descripcion%>- <%= link_to "Eliminar", class:"red", method: :delete  %></dd>
          </dl>
          <% end %>
      </div>
      <div class="col-md-6">
        <%= render 'frmAntecedentes' %>
      </div>
    </div>
  </div>
  <!--END ANTECEDENTE-->

