<% provide(:index, 'active') %>
<% if notice %>
  <div id="notice_panel">
    <p id="notice"><%= notice %></p>
  </div>
<% end %>
<div class='row' id= "titulo" style="margin-left:20px; margin-top:20px"> 
  <img src="/img/icon/people.png" alt="rss feed" />
  <h3><strong>PACIENTES</strong></h3>
</div>

<div class="row" style="margin-top:10px; width:95%">
  <div class="col-md-3 col-md-offset-3"></div>
      <div class="col-md-3 col-md-offset-3">
    <%= link_to new_paciente_path, class:"btn btn-primary pull-right" do %>
      <i class="glyphicon glyphicon-plus"></i> Agregar
    <% end %>
  </div>
</div>

<div class='row' style="margin-left:20px; margin-top:10px">
  <table class="table table-striped table-hover" style="width:90%; margin:0 auto">
  <thead>
    <tr>
      <th>Nro. HISTORIA</th>
      <th>CÃ‰DULA</th>
      <th>APELLIDO PATERNO</th>
      <th>APELLIDO MATERNO</th>
      <th>NOMBRES</th>
       <th>CONTACTO</th>
      <th>EDAD</th>
     
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody style="font-size:13px">
    <% @pacientes.each do |paciente| %>
      <tr>
        <td><%= paciente.Pac_HC %></td>
        <td><%= paciente.Pac_Cedula %></td>
        <td><%= paciente.Pac_Apellido_Paterno %></td>
        <td><%= paciente.Pac_Apellido_Materno %></td>
        <td><%= paciente.Pac_Nombres %></td>
         <td><%= paciente.Pac_Telefono %></td>
        <td><%= paciente.Pac_Fecha_Nacimiento %></td>
        
       
        
        <td><%= link_to 'Mostrar', paciente %></td>
        <td><%= link_to 'Editar', edit_paciente_path(paciente) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>



