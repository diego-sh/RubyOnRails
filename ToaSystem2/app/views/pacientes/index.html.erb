<% provide(:index, 'active') %>
<% if notice %>
  <div id="notice_panel">
    <p id="notice"><%= notice %></p>
  </div>
<% end %>
<div class='row' style="margin-left:20px"> 
  <h1>Pacientes</h1>
</div>
<div class='row' style="margin-left:20px; margin-top:10px">
  <table class="table table-striped">
  <thead>
    <tr>
      <th>Nro. Historia</th>
      <th>Cédula</th>
      <th>Apellido Paterno</th>
      <th>Apellido Materno</th>
      <th>Nombre</th>
       <th>Teléfono</th>
      <th>Edad</th>
     
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pacientes.each do |paciente| %>
      <tr>
        <td><%= paciente.Pac_HC %></td>
        <td><%= paciente.Pac_Cedula %></td>
        <td><%= paciente.Pac_Apellido_Paterno %></td>
        <td><%= paciente.Pac_Apellido_Materno %></td>
        <td><%= paciente.Pac_Nombres %></td>
         <td><%= paciente.Pac_Telefono %></td>
        <td><%= paciente.Pac_Fecha_Nacimiento %></td>
        
       
        
        <td><%= link_to 'Show', paciente %></td>
        <td><%= link_to 'Edit', edit_paciente_path(paciente) %></td>
        <td><%= link_to 'Destroy', paciente, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>



<br>

<%= link_to 'New Paciente', new_paciente_path %>
