<% provide(:ingresos, 'active') %>
    <div class="col" style="padding-top: 50px">
        <div class="row" style="text-align:center">
            <h3>PACIENTES HOSPITALIZADOS</h3>
        </div>
        <div class="center-block" style="width: 90%">
            <div class="panel">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>HABITACIÃ“N</th>
                            <th>PACIENTE</th>
                            <th>EDAD</th>
                            <th>FECHA INGRESO</th>
                            <th colspan="1"></th>
                        </tr>
                    </thead>
                    <tbody style="font-size:13px">
                        <% @pacientesIngresados.each do |paciente|  %>
                            <tr>
                                <td>
