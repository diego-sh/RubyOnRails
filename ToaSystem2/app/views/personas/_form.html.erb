<%= form_for(persona) do |f| %>
  <% if persona.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(persona.errors.count, "error") %> prohibited this persona from being saved:</h2>

      <ul>
      <% persona.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-lg-5">
      <div class="form-group">
        <label for="cedula">Cédula</label>
        <%= f.text_field :Per_Cedula, class:'form-control', id:'cedula',placeholder:'Cédula' %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-5">
      <div class="form-group">
        <label for="apellidopaterno">Apellido Paterno</label>
        <%= f.text_field :Per_Apellido_Paterno, class:'form-control', id:'apellidopaterno',placeholder:'Apellido Paterno' %>
      </div>
    </div>

    <div class="col-lg-5">
      <div class="form-group">
        <label for="apellidomaterno">Apellido Materno</label>
        <%= f.text_field :Per_Apellido_Materno, class:'form-control', id:'apellidomaterno',placeholder:'Apellido Materno' %>
      </div>
    </div>   
  </div>

  <div class="row">
    <div class="col-lg-5">
      <div class="form-group">
        <label for="nombre">Nombre</label>
        <%= f.text_field :Per_Nombres, class:'form-control', id:'nombre',placeholder:'Nombre' %>
      </div>
    </div>

    <div class="col-lg-5">
      <div class="form-group">
        <label for="telefono">Teléfono</label>
        <%= f.text_field :Per_Telefono, class:'form-control', id:'telefono',placeholder:'Teléfono' %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-4">
      <div class="form-group">
        <label for="fechanacimiento">Fecha de Nacimiento</label>
        <div>
          <%= f.date_select :Per_Fecha_Nacimiento, class:'form-control', id:'fechanacimiento' %>
        </div>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Guardar", class:"btn btn-primary center-block btn-lg" %>
  </div>
<% end %>
