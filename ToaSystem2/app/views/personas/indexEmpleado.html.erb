<% provide(:empleados, 'active') %>
  <div class='row' id="titulo" style="margin-left:20px; margin-top:50px;">
    <img src="/img/icon/nurse.png" alt="rss feed" />
    <h3><strong>EMPLEADOS</strong></h3>
  </div>
  <div class="row" style="margin-left:20px;">
    <% if notice %>
      <div id="notice_panel" style="width: 80%; margin:0 auto">
        <p id="notice">
          <%= notice %>
        </p>
      </div>
      <% end %>
  </div>
  
  <div class='row' style="margin-left:20px; width: 90%">
    <form action="../personas/newEmpleado" method="get">
      <button type="submit" class="btn btn-primary pull-right" style="width: 175px">
        <span class="fa fa-plus-circle" aria-hidden="true"></span> Agregar
      </button>
    </form>
  </div>

  <div class='row' style="margin-left:20px; margin-top:10px; width: 90%">
    <table id="tblEmpleados" class="table table-striped" style="width:100%; margin:0 auto">
      <thead>
        <tr>
          <th>CÉDULA</th>
          <th>APELLIDOS</th>
          <th>NOMBRES</th>
          <th>TELÉFONO</th>
          <th>ROL/CARGO</th>
          <th>OPCIONES</th>
        </tr>
      </thead>
      <%= render 'tblInformation'%>

    </table>
  </div>

  <br>