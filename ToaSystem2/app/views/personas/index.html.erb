<% if notice %>
  <div id="notice_panel">
    <p id="notice"><%= notice %></p>
  </div>
<% end %>
<div class='row' id = "titulo" style="margin-left:20px">
  <img src="/img/icon/doctor.png" alt="rss feed" />
  <h1>MÉDICOS</h1>
</div>
<div class="row" style="margin-left:20px; margin-top:10px">
  <div class=".col-xs-6">
    <%= link_to new_persona_path, class:"btn btn-primary pull-right" do %>
      <i class="glyphicon glyphicon-plus"></i> Agregar
    <% end %>
  </div>
</div>
<div class='row' style="margin-left:20px; margin-top:10px">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Cédula</th>
        <th>Apellido Paterno</th>
        <th>Apellido Materno</th>
        <th>Nombre</th>
        <th>Especialidad</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @personas.each do |persona| %>
        <tr>
          <td><%= persona.Per_Cedula %></td>
          <td><%= persona.Per_Apellido_Paterno %></td>
          <td><%= persona.Per_Apellido_Materno %></td>
          <td><%= persona.Per_Nombres %></td>
          <td><%= persona.Especialidad %></td>
          <td><%= link_to 'Mostrar', persona %></td>
          <td><%= link_to 'Editar', edit_persona_path(persona) %></td>
          <td><%= link_to 'Eliminar', persona, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

