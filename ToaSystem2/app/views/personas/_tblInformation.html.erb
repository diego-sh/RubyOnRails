<tbody style="font-size:13px">
          <% @personas.each do |persona| %>
            <tr>
              <td>
                <%= persona.Per_Cedula %>
              </td>
              <td>
                <%= persona.Per_Apellido_Paterno + " "+ persona.Per_Apellido_Materno %>
              </td>
              <td>
                <%= persona.Per_Nombres %>
              </td>
                <% if persona.respond_to?("Rol") %>
                    <td><%= persona.Per_Telefono %></td>
                    <td><%= persona.Rol %></td>
                    <% else%>
                    <td><%= persona.Especialidad %></td>
                <% end %>
              <td>
                <%= link_to 'Ver', persona, style:'margin-right:10px' %><%= link_to 'Editar', edit_persona_path(persona), style:'margin-right:10px' %>
                <% if !persona.respond_to?("Rol") %>                  
                    <%= link_to 'Horario', new_horario_path(:med => persona.medico_id), style:'margin-right:10px' %>
                <% end %>
                <% if persona.usuario_id == nil %>              
                  <%= link_to 'Configurar Usuario', new_usuario_path(persona) %>
                <% end %>
                
              </td>
              <!--<td>
                <%= link_to 'Editar', edit_persona_path(persona) %>
              </td>-->
             

              
            </tr>
            <% end %>
        </tbody>