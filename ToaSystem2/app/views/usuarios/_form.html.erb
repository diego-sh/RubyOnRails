    <div class="row">
      <div class="center-block info" style="width:50%">
        <div class="exteriorInfo">
          <div class="row bordeInferior">          
             <h5><strong>INFORMACIÓN GENERAL DEL NUEVO USUARIO</strong></h5>         
          </div>

          <div class="row" style="margin-top: 10px">
            <div class="col-md-2"><strong>Cédula</strong></div>
            <div class="col-md-4"><%=@persona.Per_Cedula %></div>
          </div>
          <div class="row">
            <div class="col-md-2"><strong>Apellidos</strong></div>
            <div class="col-md-4"><%=@persona.Per_Apellido_Paterno+' '+@persona.Per_Apellido_Materno %></div>
          </div>
          <div class="row">
            <div class="col-md-2"><strong>Nombres</strong></div>
            <div class="col-md-4"><%=@persona.Per_Nombres %></div>
          </div>

        </div>
      </div>

    </div>
  
  
  <div class="row" style="margin-top: 20px">
      <div class="center-block" style="width:500px;max-width:100%;">
        <div class="form-group">
          <label for="perfil">Perfil</label>
            <%= f.collection_select :perfil_id, @perfiles, :perfil_id, :Nombre_perfil,{},{ :class => 'form-control'} %>     
        </div>
      </div>
  </div>
  <div class="row">
      <div class="center-block" style="width:500px;max-width:100%;">
        <div class="form-group">
          <label for="username">Nombre Usuario</label>
          <%= f.text_field :User_Name, class:'form-control', id:'username',placeholder:'Usuario' %>
        </div>
      </div>
  </div>
  <% if !@editar%>
  <div class="row">
      <div class="center-block" style="width:500px;max-width:100%;">
        <div class="form-group">
          <label for="password">Password</label>
          <%= f.password_field :Password, class:'form-control', id:'password',placeholder:'CONTRASEÑA' %>
        </div>
      </div>
  </div>
  <% end %>
  
    <div class="row">
        <div class="center-block" style="width:500px;max-width:100%;">
          <div class="form-group">
            <label for="estado">Estado</label>
              <%= f.select(:Estado, options_for_select([['ACTIVO', 'ACTIVO'], ['INACTIVO', 'INACTIVO']]),{},{ :class => 'form-control'}) %>
          </div>
        </div>
    </div>


  <div class="row" style="margin-top: 20px">
    <div class="center-block" style="width:80%">
      <div class="col-md-4">
        </div>
      <div class="col-md-2">
        <div class="actions">
            <%= f.submit "Aceptar", class: "btn btn-primary btn-block" %>
        </div>
      </div>
      <div class="col-md-2">  
        <%= link_to 'Cancelar', indexEmpleado_personas_path, class:"btn btn-primary btn-block" %>
      </div>
      <div class="col-md-4"></div>

    </div>
  </div>
  
<% end %>
