<% provide(:usuarios, 'active') %>
<div class='row' id= "titulo" style="margin-left:20px; margin-top:50px"> 
  <img src="/img/icon/PEOPLE.png" alt="rss feed" />
  <h3><strong>USUARIOS</strong></h3>
</div>

<div class="row" style="margin-left:20px; margin-top:10px;">
  <% if notice %>
  <div id="notice_panel" style="width: 80%; margin:0 auto">
    <p id="notice"><%= notice %></p>
  </div>
  <% end %>
</div>
<div class='row' style="margin-left:20px; margin-top:10px; width: 90%">
  <table id="tblUsuarios" class="table table-striped table-hover">
    <thead>
    <tr>
      <th>APELLIDOS</th>
      <th>NOMBRES</th>
      <th>USUARIO</th>
      <th>PERFIL</th>
      <th>OPCIONES</th>
    </tr>
  </thead>

  <tbody  style="font-size:13px">
    <% @usuarios.each do |usuario| %>
      <tr>
        <td><%= usuario.Apellidos %></td>
        <td><%= usuario.Nombres %></td>
        <td><%= usuario.Username %></td>
        <td><%= usuario.Perfil %></td>
        <td>
          <div class="row">
            <%= button_to("Editar", edit_usuario_path(usuario), :method => "get", class: "boton boton-amarillo")%>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
