
<div class="alert alert-warning" role="alert">
  <div class="row" style="padding-left: 20px">
    Ingrese el número de cedula del paciente a consultar
  </div>
  <div class="row">
    <%= form_tag({controller: "citas", action: "buscarPaciente"}, method: "post", class:'form-inline', remote: true, id: "buscarPacienteCita-form",format: :json) do %>
      <div class="row">
        <div class="center-block" style="width:500px;max-width:100%;">
          <div class="form-group">
            <label for="cedula">CÉDULA</label>
            <%= text_field_tag :term, params[:term], class:'form-control', id:'cedula', placeholder:'Ingrese valor', maxlength:'10' %>
          </div>
          <%= button_tag type: 'submit', class: "btn btn-primary", id: "register-button" do %>
            <i class="glyphicon glyphicon-search" aria-hidden="true"></i> Buscar
            <% end %>
        </div>
      </div>
      <% end %>
  </div>
</div>

<div id='pnlPacienteEncontrado'>
  <div class="center-block" style="width: 80%">
    <div class="header-pnl">
      <p style="padding-top: 6px; padding-bottom: 5px;">INFORMACIÓN GENERAL PACIENTE</p>
    </div>
    <div class="body-pnl">
      <div class="col" style="margin-top: 10px;">
        <div class="row">
          <div class="col-md-2" style="margin-left:20px">
            <div class="etiqueta">HISTORIA CLÍNICA</div>
          </div>
          <div class="col-md-2">
            <div class="etiquetaValor" id='pcteHistoria'></div>
          </div>
          <div class="col-md-3" style="margin-left:20px">
            <div class="etiqueta">NOMBRES Y APELLIDOS</div>
          </div>
          <div class="col-md-4">
            <div class="etiquetaValor" id='pcteNombresApellidos'></div>
          </div>
        </div>

        <div class="row" style="margin-top: 5px">
          <div class="col-md-2" style="margin-left:20px">
            <div class="etiqueta">IDENTIFICACIÓN</div>
          </div>
          <div class="col-md-2">
            <div class="etiquetaValor" id='pcteIdentificacion'></div>
          </div>
          <div class="col-md-3" style="margin-left:20px">
            <div class="etiqueta">CONTACTO</div>
          </div>
          <div class="col-md-4">
            <div class="etiquetaValor" id='pcteContacto'></div>
          </div>
        </div>
        <div class="row" style="margin-bottom: 10px"></div>
      </div>
    </div>

    <div>
      <%= form_for(cita, :url => { :action => "create" }, remote: true, html:{id: "cita-form",format: :json}) do |f| %>
        <div class="center-block" style="width:500px;max-width:100%;">
          <div class="row" style="margin-top: 20px">          
            <div class="form-group">
              <label for="perfil">ESPECIALISTA</label>
              <%= f.collection_select :medico_id, @especialistas, :medico_id, :Nombre,{},{ :class => 'form-control'} %>
            </div>          
          </div>

          <div class="row">
            <div class="col-lg-6" style="padding-left: 0px">
              <div class="form-group">
                <label for="fechacita">FECHA</label>
                <%= f.date_field :Cit_Fecha, value: Date.today.strftime("%Y-%m-%d"),min: Date.today,class:'form-control',id:'fechacita'%>
              </div>
            </div>
            <div class="col-lg-6" style="padding-right: 0px">
              <div class="form-group">
                <label for="fechacita">HORA</label>
                <%= f.select(:Cit_Hora, options_for_select([['09:00'], ['09:30'], ['10:00'],['10:30'],['11:00'],['11:30'],['12:00'],['12:30'],['13:00'],['13:30'],['14:00'],['14:30'],['15:00'],['15:30'],['16:00'],['16:30'],['17:00']]),{}, { :class=> 'form-control' }) %>
              </div>              
            </div>
          </div>

          <div class="row">        
            <div class="form-group">
              <label for="motivo">MOTIVO</label>
              <%= f.text_area :Cit_Motivo, class:'form-control', id:'motivo', placeholder:'Describa el motivo de la consulta' %>
            </div>          
          </div>

          <div class="row">          
            <div class="form-group">
              <label for="motivo">OBSERVACIÓN</label>
              <%= f.text_area :Cit_Observacion, class:'form-control', id:'motivo', placeholder:'' %>
            </div>          
          </div>

          <div class="row">          
            <div class="col-md-3"></div>
            <div class="col-md-3">
              <div class="actions">
                <%= f.submit "Guardar", class:"btn btn-primary  btn-block" %>
              </div>
            </div>
            <div class="col-md-3">
              <%= link_to 'Cancelar', citas_path, class:"btn btn-primary center-block" %>
            </div>
            <div class="col-md-3"></div>
          </div>
        </div>

      <%end%>
    </div>

  </div>
</div>

<div class="alert alert-info" id="pnlPacienteRegistrar">
    <form action="../pacientes/new" method="get">
          PARA REGISTRAR UN PACIENTE <strong>ACCEDA:  </strong> <button type="submit" class="btn btn-primary btn-xs">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> CREAR PACIENTE
          </button>
      </form>
</div>
