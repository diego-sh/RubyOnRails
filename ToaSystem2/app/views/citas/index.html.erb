<div id="bloque" class="alert alert-warning" role="alert" style="width: 100%; margin-top: 20px">
  <div class="row" style="padding-left: 20px">
    <h4 style="font-size: 16px"><strong>BUSQUEDA DE CITAS</strong></h4>
  </div>
  <div class="row">
    <%= form_for :cita do |f| %>
      <div class="center-block" style="width:70%">
        <div class="col-md-4">
          <div class="form-group">
            <label for="perfil">POR ESPECIALISTA</label>
            <%= f.collection_select :medico_id, @especialistas, :medico_id, :Nombre,{prompt: "TODOS"},{ :class => 'form-control', :id => 'citas_selector'} %>
          </div>
        </div>
        <% end %>
          <div class="col-md-2"></div>                
      </div>

      <div class="col-md-3">
       <label>POR PACIENTE</label>
         <div class="input-group">
           <input type="text" class="form-control" id = 'paciente' placeholder="Cédula">
              <span class="input-group-btn">
                  <button class="btn btn-default" type="button" name="cedula" id="cedula" onclick="filtroPaciente()">
                    <span class="glyphicon glyphicon-search"></span>
                  </button>
              </span>
            </div>
      </div> 
  </div>
</div>

<div class="row" style="padding-right: 15px">  
  <%= link_to new_cita_path, class:"btn btn-primary pull-right", style:"width:155px" do %>
  <i class="fa fa-plus-circle"></i> AGENDAR CITA
  <% end %>    
</div>  
<div class="row">
  <div class="alert" style="padding-bottom: 0px">
  <div style="width: 100%;">
    <div class="calendar"></div>
  </div> 
  </div>
</div>

<div class="modal fade" id="modalInfoCita" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel" style="color:#1976d2; font-weight: 600">INGRESO</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="alert alert-success">
                    <div class="row">
                        <div class="col-lg-4">
                            <div style="color:#1976d2">PACIENTE</div>
                        </div>
                        <div class="col-lg-8">
                            <div id="infoPaciente2"></div>
                        </div>                        
                    </div>
                    <div class="row">
                        <div class="col-lg-4">
                            <div style="color:#1976d2">CIRUGÍA PROPUESTA</div>
                        </div>
                        <div class="col-lg-8">
                            <div id="cirugiaPropuesta2"></div>
                        </div>  
                    </div>
                    <div class="row" style="margin-top: 20px">
                        <div class="col-lg-12" style="text-align: center; font-weight: 900">
                            <div id="estado"></div>
                        </div> 
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success btn-sm" data-dismiss="modal">
                    <span><i class="fa fa-check" aria-hidden="true"></i> ACEPTAR</span>
                </button>
            </div>
        </div>
    </div>
</div>