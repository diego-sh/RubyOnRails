              <input type="text" class="form-control">
              <span class="input-group-btn">
                  <button class="btn btn-default" type="button" name="cedula" id="cedula" onclick="myfunction()">
                    <span class="glyphicon glyphicon-search"></span>
              </button>
              </span>
            </div>
          </div>                 
      </div>      
  </div>
</div>

