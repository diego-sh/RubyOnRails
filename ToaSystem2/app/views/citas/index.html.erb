  </div>
  <div class="row">
    <%= form_for :cita do |f| %>
      <div class="center-block" style="width:70%">
        <div class="col-md-4">
          <div class="form-group">
            <label for="perfil">POR ESPECIALISTA</label>
            <%= f.collection_select :medico_id, @especialistas, :medico_id, :Nombre,{prompt: 'TODOS'},{ :class => 'form-control', :id => 'citas_selector'} %>
