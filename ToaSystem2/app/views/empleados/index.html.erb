<% if notice %>
  <div id="notice_panel">
    <p id="notice"><%= notice %></p>
  </div>
<% end %>
<div class='row' id="titulo" style="margin-left:20px">
  <img src="/img/icon/nurse.png" alt="rss feed" />
  <h1>EMPLEADOS</h1>
</div>
<div class="row" style="margin-left:20px; margin-top:10px">
  <div class=".col-xs-6">
    <%= link_to new_empleado_path, class:"btn btn-primary pull-right" do %>
      <i class="glyphicon glyphicon-plus"></i> Agregar
    <% end %>
  </div>
</div>
<div class='row' style="margin-left:20px; margin-top:10px">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Cédula</th>
        <th>Apellido Paterno</th>
        <th>Nombre</th>
        <th>Teléfono</th>
        <th>Rol</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @empleados.each do |persona| %>
        <tr>
          <td><%= persona.Per_Cedula %></td>
          <td><%= persona.Per_Apellido_Paterno %></td>
          <td><%= persona.Per_Nombres %></td>
          <td><%= persona.Per_Telefono %></td>
          <td><%= persona.Rol %></td>
          <td><%= link_to 'Mostrar', persona %></td>
          <td><%= link_to 'Editar', edit_empleado_path(persona) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

